<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellowBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time Left:"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Timer"
            android:id="@+id/timer"
            android:textSize="20dp"
            android:textStyle="bold"/>

    </LinearLayout>
    <!-- This is going to be the flippy card. We're gonna do it manually because HACKATHON -->
    <LinearLayout
        android:id="@+id/question_card"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="420dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:background="@drawable/cardshadow">

        <TextView
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="GAME DAY QUESTION"
            android:textColor="@color/yellowBackground"
            android:textSize="36dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:src="@drawable/matthews"
            android:id="@+id/question_thumbnail"
            android:layout_width="147dp"
            android:layout_height="147dp"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <TextView
            android:id="@+id/question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="QUESTION_TEXT"
            android:gravity="center_horizontal"
            android:textSize="22dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="32dp"
            android:orientation="horizontal"
            android:id="@+id/need_help">

            <!-- TODO Questionmark Imageview -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gethelp"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/button0"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="32dp"
            android:src="@drawable/yes"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/button1"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="32dp"
            android:src="@drawable/no"/>

    </LinearLayout>
</LinearLayout>