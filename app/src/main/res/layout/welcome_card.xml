<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/close_popup_team"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:text="âœ•"
        android:textSize="24dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/close_popup_team"
        android:layout_centerHorizontal="true"
        android:text="Welcome to the Home of the"
        android:textSize="18dp"
        android:textColor="@color/yellowBackground"
        android:id="@+id/textView" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="TEAM_NAME"
        android:textSize="32dp"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />
    
    <ImageView
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:id="@+id/gift_image"
        android:layout_below="@+id/team_name"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="As a welcome gift..."
        android:layout_below="@+id/gift_image"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView2" />

    <TextView
        android:id="@+id/deal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DISCOUNT_TEXT"
        android:textSize="16dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />
</RelativeLayout>